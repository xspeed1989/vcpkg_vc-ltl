{
  "name": "exiv2",
  "version": "0.27.6",
  "port-version": 3,
  "description": "Image metadata library and tools",
  "homepage": "https://exiv2.org",
  "license": "GPL-2.0-or-later",
  "supports": "!uwp & !xbox",
  "dependencies": [
    {
      "name": "libiconv",
      "platform": "!windows"
    },
    {
      "name": "vcpkg-cmake",
      "host": true
    },
    {
      "name": "vcpkg-cmake-config",
      "host": true
    }
  ],
  "features": {
    "bmff": {
      "description": "Support for BMFF files (e.g., CR3, HEIF, HEIC, AVIF, and JPEG XL)"
    },
    "nls": {
      "description": "Build native language support",
      "dependencies": [
        "gettext",
        {
          "name": "gettext",
          "host": true,
          "features": [
            "tools"
          ]
        }
      ]
    },
    "png": {
      "description": "Build with png support",
      "dependencies": [
        "libpng",
        "zlib"
      ]
    },
    "unicode": {
      "description": "Compile with Unicode support on Windows",
      "supports": "windows"
    },
    "video": {
      "description": "Build video support into library"
    },
    "xmp": {
      "description": "Build with XMP metadata support",
      "dependencies": [
        "expat"
      ]
    }
  }
}
